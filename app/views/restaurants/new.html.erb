<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <%= link_to "Restaurants", restaurants_path, class: "breadcrumb-item" %>
    <li class="breadcrumb-item active" aria-current="page">Add Restaurant</li>
  </ol>
</nav>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :category, collection: %w[chinese italian japanese french belgian] %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.button :submit, class: "btn-primary mt-3" %>
<% end %>
